<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>
        Christina's Awesome Blog
    </title>
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
    <script src="https://use.fontawesome.com/badc11c74c.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Fresca" rel="stylesheet">

</head>

<body>


    <nav class="navbar navbar-default header">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/posts">Christina's Awesome Blog</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row text-center">
            <div class="col-md-12">
                <h1>Awesome Blog Posts</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-right">
                <a href="/posts/add"><button><i class="fa fa-plus fa-2x"></i> Add a post</button></a>
            </div>
        </div>

        <br />
        <div class="row">


            <% posts.forEach(function(post) { %>

                <div class="col-md-6 col-md-offset-3">

                    <div class="post_format">


                        <div class="row post_header">
                            <div class="col-md-6">
                                <h3><%= post.author %></h3>
                            </div>

                            <div class="col-md-6">
                                <h5><%= post.date %></h5>
                            </div>
                        </div>

                        <div class="row post_body">
                            <div class="col-md-12">
                                <p>

                                    "
                                    <%= post.post_body.substr(0,20) %>..."<a href="/posts/<%= post.id %>/show">(show more)</a></p>
                            </div>
                        </div>

                        <div class="row post_icons">
                            <div class="col-md-12 text-right">
                                <ul>
                                    <li>
                                        <a href="/posts/<%= post.id %>/edit"> <button><i class="fa fa-pencil fa-2x"></i></button></a>
                                    </li>
                                    <li>
                                        <form action="/posts/<%= post.id %>?_method=DELETE" method="POST">

                                            <button type="submit"><i class="fa fa-trash fa-2x"></i></button> </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <% }) %>

        </div>
    </div>

    <footer>
        <div class="footer_text text-left">


            &copy; 2016 Christina McMillan
        </div>
    </footer>
</body>

</html>
